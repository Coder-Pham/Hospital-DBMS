<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.control.TextArea?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="Hospital_DBMS.ControllerFunctionThree">

    <left>
        <GridPane prefWidth="300" alignment="top_left" hgap="10" vgap="10" >

            <Button fx:id="backButton" text="&lt;" GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#onBackButtonPressed"> </Button>

            <Label text="Doctor ID" GridPane.columnIndex="3" GridPane.rowIndex="10"> </Label>

            <TextField fx:id="DocIDInput" prefWidth="100" GridPane.columnIndex="4" GridPane.rowIndex="10" onMouseClicked="#onMouseClickedTextField"> </TextField>

            <HBox GridPane.columnIndex="4" GridPane.rowIndex="11" alignment="bottom_right" prefWidth="100">
                <Button fx:id="confirmButton" text="Confirm" onAction="#onConfirmButtonPressed"> </Button>
            </HBox>

        </GridPane>
    </left>

    <center>
        <ScrollPane fx:id="scrollpane">

            <TableView fx:id="InfoTable" prefHeight="750">
                <columns>
                    <TableColumn fx:id="col1" minWidth="200" text="PID"/>
                    <TableColumn fx:id="col2" minWidth="200" text="Full Name"/>
                    <TableColumn fx:id="col3" minWidth="200" text="Date of Birth"/>
                    <TableColumn fx:id="col4" minWidth="200" text="Gender"/>
                    <TableColumn fx:id="col5" minWidth="200" text="Phone No."/>
                    <TableColumn fx:id="col6" minWidth="200" text="Address"/>
                    <TableColumn fx:id="col7" minWidth="200" text="Admission Date"/>
                    <TableColumn fx:id="col8" minWidth="200" text="Discharge Date"/>
                    <TableColumn fx:id="col9" minWidth="200" text="Diagnosis"/>
                    <TableColumn fx:id="col10" minWidth="200" text="Sick Room"/>
                    <TableColumn fx:id="col11" minWidth="200" text="Fee"/>
                    <TableColumn fx:id="col12" minWidth="200" text="Caring Nurse ID"/>
                    <TableColumn fx:id="col13" minWidth="200" text="Treatment ID"/>
                    <TableColumn fx:id="col14" minWidth="200" text="Treatment Start Date"/>
                    <TableColumn fx:id="col15" minWidth="200" text="Treatment End Date"/>
                    <TableColumn fx:id="col16" minWidth="200" text="Result"/>
                </columns>
            </TableView>

        </ScrollPane>
    </center>

    <bottom>

        <TextArea fx:id="errorMessage"> </TextArea>

    </bottom>

</BorderPane>
